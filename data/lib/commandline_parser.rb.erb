require 'optparse'

# Responsible for parsing commandline options and making them available throughout the app
#
module <%= classname %>
  class CommandLineParser
    def self.parse
      @parser ||= OptionParser.new do |opts|
        opts.banner = "Usage: #{File.basename($0)} [options] ..."

        opts.on_tail("-h", "--help", "Show this message") do
          Kernel.puts opts
          exit
        end

        opts.on("--debug", "Display debugging information") {
          options[:debug] = true
        }

        opts.on("-v", "--version", "Display the samurai version, and exit.") do
          puts <%= classname %>.version
          exit
        end
        
        opts.separator ""
      end
    end
  end
end